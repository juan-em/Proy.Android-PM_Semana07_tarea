<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.Tarea.AppWidgetContainer"
    android:id="@+id/frmWidget">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:background="@drawable/ciudad"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lblHora"
                android:layout_width="130dp"
                android:layout_height="100dp"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/cartel"
                android:fontFamily="@font/oswald_medium"
                android:gravity="center_vertical|center_horizontal"
                android:shadowColor="@color/black"
                android:shadowRadius="2"
                android:text="02:09 AM"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/lblDia"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:background="@drawable/cartel2"
                android:text="\t\t\tThu\n\t\t\tNOV 12"
                android:gravity="center_vertical"
                android:layout_marginTop="20dp"
                android:textColor="#FD9AB9"
                android:textStyle="bold" />
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                >
                <ImageView
                    android:layout_gravity="right|top"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="75dp"
                    android:layout_height="65dp"
                    android:src="@drawable/badge"/>
                <ImageView
                    android:layout_gravity="right|top"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="27dp"
                    android:layout_width="50dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icono_nube_balnco"/>
            </FrameLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#5F000000"
            android:paddingHorizontal="20dp"
            android:paddingVertical="5dp">
            <LinearLayout
                android:layout_marginLeft="7dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/lblMensaje"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sanfrancisco"
                        android:fontFamily="@font/oswald_medium"
                        android:textSize="20dp"
                        android:textColor="#ECEC22"
                        android:gravity="top"/>
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="30dp"
                        android:src="@drawable/image"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:text="Partly Sunny"
                    android:fontFamily="@font/oswald_medium"
                    android:textSize="17dp"
                    android:textColor="@color/white"/>
            </LinearLayout>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="right">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="30°"
                        android:fontFamily="@font/oswald_medium"
                        android:textSize="37dp"
                        android:textColor="#ECEC22"
                        android:gravity="top"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="33°"
                            android:gravity="center_vertical"
                            android:textColor="@color/white"
                            android:fontFamily="@font/oswald_medium"
                            android:textSize="13dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15°"
                            android:gravity="center_vertical"
                            android:textColor="@color/white"
                            android:fontFamily="@font/oswald_medium"
                            android:textSize="13dp"/>
                    </LinearLayout>
                </LinearLayout>
            </FrameLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>